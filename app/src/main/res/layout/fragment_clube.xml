<RelativeLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fabio.jogadorlesionado.ClubeFragment"
    android:weightSum="1">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_escudo"
        android:src="@drawable/internacional" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Internacional"
        android:id="@+id/tv_nome_clube"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_escudo" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_lesionados"
        android:layout_below="@+id/iv_escudo"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/adView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Sport Club Internacional"
        android:id="@+id/tv_nome_compl"
        android:layout_below="@+id/tv_nome_clube"
        android:layout_alignLeft="@+id/tv_nome_clube" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="60dp"
        android:layout_marginRight="0dp"
        android:id="@+id/iv_pais"
        android:src="@drawable/brasil"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/tv_nome_compl" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7696267246856953/2111659625"/>

</RelativeLayout>
